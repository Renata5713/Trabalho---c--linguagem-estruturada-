#include <stdio.h>
#include <string.h>

int main() {
    int i, n;
    char nome[100];
    float salario, soma = 0, maior, menor;

    printf("Digite a quantidade de funcionários: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Número inválido!\n");
        return 1;
    }

    printf("Digite o nome e o salário do funcionário 1: ");
    scanf("%s %f", nome, &salario);

    soma = salario;
    maior = menor = salario;

    for (i = 2; i <= n; i++) {
        printf("Digite o nome e o salário do funcionário %d: ", i);
        scanf("%s %f", nome, &salario);

        soma += salario;

        if (salario > maior) maior = salario;
        if (salario < menor) menor = salario;
    }

    printf("Média salarial: %.2f\n", soma / n);
    printf("Maior salário: %.2f\n", maior);
    printf("Menor salário: %.2f\n", menor);

    return 0;
}
