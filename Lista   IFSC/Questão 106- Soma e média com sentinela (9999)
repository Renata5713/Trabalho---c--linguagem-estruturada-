#include <stdio.h>

int main() {
    int x, soma = 0, cont = 0;

    printf("Digite valores (9999 para encerrar):\n");

    while (1) {
        scanf("%d", &x);
        if (x == 9999) break;

        soma += x;
        cont++;
    }

    if (cont > 0)
        printf("Soma = %d | Média = %.2f\n", soma, (float)soma / cont);
    else
        printf("Nenhum valor válido foi inserido.\n");

    return 0;
}
