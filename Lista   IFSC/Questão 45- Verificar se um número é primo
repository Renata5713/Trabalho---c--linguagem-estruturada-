#include <stdio.h>

int main() {

    int N, primo = 1;

    printf("Digite um número: ");

    scanf("%d", &N);

    if (N < 2) {

        primo = 0;

    } else {

        for (int i = 2; i <= N / 2; i++) {

            if (N % i == 0) {

                primo = 0;

                break;

            }

        }

    }

    if (primo) {

        printf("O número %d é primo.\n", N);

    } else {

        printf("O número %d não é primo.\n", N);

    }

    return 0;

}

