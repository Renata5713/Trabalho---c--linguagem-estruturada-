include <stdio.h>

int main() {

    int n;

    printf("Digite o número de elementos: ");

    scanf("%d", &n);

    int vetor[n];

    int pares = 0, impares = 0;

    printf("Digite os elementos:\n");

    for (int i = 0; i < n; i++) {

        scanf("%d", &vetor[i]);

        if (vetor[i] % 2 == 0) {

            pares++;

        } else {

            impares++;

        }

    }

    printf("Números pares: %d, Números ímpares: %d\n", pares, impares);

    return 0;

}

