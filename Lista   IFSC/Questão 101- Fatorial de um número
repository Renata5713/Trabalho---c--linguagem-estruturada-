#include <stdio.h>

int main() {
    int num, i;
    unsigned long long fatorial = 1;

    printf("Digite um número inteiro não-negativo: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("Fatorial não existe para números negativos.\n");
        return 1;
    }

    for (i = 1; i <= num; i++) {
        fatorial *= i;
    }

    printf("%d! = %llu\n", num, fatorial);
    return 0;
}
