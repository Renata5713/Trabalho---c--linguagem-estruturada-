#include <stdio.h>

int main() {

    int matriz[2][2], transposta[2][2];

    printf("Digite os elementos da matriz 2x2:\n");

    for (int i = 0; i < 2; i++) {

        for (int j = 0; j < 2; j++) {

            scanf("%d", &matriz[i][j]);

        }

    }

    // Transpondo a matriz

    for (int i = 0; i < 2; i++) {

        for (int j = 0; j < 2; j++) {

            transposta[j][i] = matriz[i][j];

        }

    }

    printf("Matriz transposta:\n");

    for (int i = 0; i < 2; i++) {

        for (int j = 0; j < 2; j++) {

            printf("%d ", transposta[i][j]);

        }

        printf("\n");

    }

    return 0;

}

