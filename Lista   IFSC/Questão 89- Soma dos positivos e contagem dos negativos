#include <stdio.h>



int main() {

    int i, valor, somaPositivos = 0, contNegativos = 0;



    for (i = 1; i <= 50; i++) {

        printf("Digite o %dº valor: ", i);

        scanf("%d", &valor);



        if (valor >= 0) {

            somaPositivos += valor;

        } else {

            contNegativos++;

        }

    }



    printf("Soma dos números positivos: %d\n", somaPositivos);

    printf("Quantidade de números negativos: %d\n", contNegativos);



    return 0;

}

