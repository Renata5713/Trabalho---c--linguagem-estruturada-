#include <stdio.h>

#include <string.h>



int main() {

    int conta;

    float saldo, valor;

    char operacao;



    printf("Digite o número da conta: ");

    scanf("%d", &conta);



    printf("Digite o saldo atual: ");

    scanf("%f", &saldo);



    printf("Digite a operação (D para depósito / R para retirada): ");

    scanf(" %c", &operacao);



    printf("Digite o valor da operação: ");

    scanf("%f", &valor);



    if (operacao == 'D' || operacao == 'd') {

        saldo += valor;

    } else if (operacao == 'R' || operacao == 'r') {

        saldo -= valor;

    } else {

        printf("Operação inválida!\n");

        return 1;

    }



    printf("Novo saldo: %.2f\n", saldo);



    if (saldo < 0) {

        printf("Conta estourada!\n");

    }



    return 0;

}

