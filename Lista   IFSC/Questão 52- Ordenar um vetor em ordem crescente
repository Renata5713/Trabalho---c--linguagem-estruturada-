#include <stdio.h>

int main() {

    int n;

    printf("Digite o número de elementos: ");

    scanf("%d", &n);

    int vetor[n];

    printf("Digite os elementos:\n");

    for (int i = 0; i < n; i++) {

        scanf("%d", &vetor[i]);

    }

    // Ordenação por método de bolha

    for (int i = 0; i < n - 1; i++) {

        for (int j = 0; j < n - i - 1; j++) {

            if (vetor[j] > vetor[j + 1]) {

                int temp = vetor[j];

                vetor[j] = vetor[j + 1];

                vetor[j + 1] = temp;

            }

        }

    }

    printf("Vetor ordenado:\n");

    for (int i = 0; i < n; i++) {

        printf("%d ", vetor[i]);

    }

    printf("\n");

    return 0;

}

